<odoo>

    <record id="view_pos_order_form" model="ir.ui.view">
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='order_total']" position="after">
                <group name="margin">
                    <field name="margin" widget='monetary'/>
                </group>
                <button name="recompute_all_margins" type="object" string="Recompute Line Margins" groups="base.group_no_one"/>
                <button name="recompute_order_margins" type="object" string="Recompute Order Margin" groups="base.group_no_one"/>
            </xpath>
            <xpath expr="//field[@name='lines']/tree/field[@name='price_unit']" position="after">
                <field name="purchase_price"/>
                <field name="margin"/>
            </xpath>
        </field>
    </record>

</odoo>
